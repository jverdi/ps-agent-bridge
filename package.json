{
  "name": "@jverdi/agent-bridge-for-photoshop",
  "version": "0.1.2",
  "type": "module",
  "description": "Photoshop agent CLI scaffold with desktop adapter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jverdi/agent-bridge-for-photoshop.git"
  },
  "homepage": "https://github.com/jverdi/agent-bridge-for-photoshop",
  "bugs": {
    "url": "https://github.com/jverdi/agent-bridge-for-photoshop/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "psagent": "dist/psagent/src/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "check": "tsc -p tsconfig.json --noEmit",
    "docs:validate": "bash scripts/docs/validate.sh",
    "prepublishOnly": "npm run check && npm run build",
    "dev": "tsx psagent/src/cli.ts",
    "test:integration": "tsx --test tests/integration/**/*.test.ts",
    "start": "node dist/psagent/src/cli.js",
    "mcp": "node dist/psagent/src/mcp/server.js",
    "bridge:reload": "bash scripts/dev/reload-psagent-bridge.sh",
    "bridge:hotreload": "node scripts/dev/hot-reload-server.mjs",
    "skill:install": "bash scripts/dev/install-psagent-skill.sh",
    "verify:photoshop-live": "bash scripts/dev/verify-photoshop-live.sh"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
